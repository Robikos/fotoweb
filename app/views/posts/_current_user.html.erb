<% if user_signed_in? %>
  <div style="float: left">
    <% if current_user.avatar_file_name == nil %>
      <%= link_to "Dodaj avatar!", add_avatar_users_path %>
    <% else %>
      <%= image_tag current_user.avatar.url(:medium), size: "150x150", class: "current_user_avatar" %>
    <% end %>
  </div>
  <div style="float: right">
    Logged in as: <%= current_user.username %><br>
    Posts: <%= current_user.posts.count %><br>
    Registered at: <%= current_user.created_at %>

    <br>
    <%= link_to "Dodaj nowy post!", new_user_post_path(current_user.username) %><br>
    <%= link_to "Znajomi", user_friendships_path(current_user.username) %>
  </div>
<% else %>
  <%= link_to "Zaloguj siÄ™ lub zarejestruj!", root_path %>
<% end %>
