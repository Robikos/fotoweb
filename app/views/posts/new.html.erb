<h3>Dodaj foto!</h3>

<%= form_for [current_user, @post], html: { multipart: true } do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.label :picture %><br>
    <%= f.file_field :picture %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
