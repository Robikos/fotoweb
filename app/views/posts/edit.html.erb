<h3>Edytuj foto!</h3>

<%= form_for @post do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.label :picture %><br>
    <%= f.file_field :picture %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
